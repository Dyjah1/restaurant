<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YourOrder">

    <android.support.v7.widget.Toolbar
        android:id="@+id/order_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:title="YOUR ORDER"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextAppearance="@style/CustomActionBar">

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="?attr/actionBarSize">

            <TextView
                android:id="@+id/order_1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="7dp"
                android:background="#424242"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="SAMOSA

QUANTITY                                                 2"/>

            <TextView
                android:id="@+id/order_2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#424242"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:text="CAPPUCINO

QUANTITY                                                 1"/>

            <TextView
                android:id="@+id/order_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#AD1457"
                android:textColor="#fff"
                android:textSize="20dp"
                android:fontFamily="@font/seasrn__"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:text="TOTAL PRICE:
                4500"/>

            <Button
                android:id="@+id/proceed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="cursive"
                android:textStyle="italic"
                android:background="#424242"
                android:textSize="20dp"
                android:text="PROCEED"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>